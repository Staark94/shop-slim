{% extends 'templates/body.twig' %}
{% block content %}
<div class="row">
    <div class="col">
        <form class="form" method="post" action="{{ path_for('admin.cat.post', { method: 'save' }) }}">
            <div class="mb-5 card bg-light">
                <div class="card-header">
                    <h5><i class="fa fa-shopping-bag" aria-hidden="true"></i> Adauga o noua categorie</h5>
                </div>

                <div class="card-body">
                    <div class="form-group">
                        <label>Nume Categorie</label>
                        <input type="text" name="cat_name" class="form-control" max="56" min="6" placeholder="Category Name" />
                    </div>

                    <div class="form-group">
                        <label>Pozitie Categorie</label>
                        <input type="number" name="cat_pos" class="form-control" max="30" min="1" placeholder="Category Position" />
                    </div>

                    <div class="form-group">
                        <label for="">Categorii Existente</label>
                        {% if result %}
                            <select name="exists" id="">
                                {% for item in result.cat %}
                                    <option value="{{ item.id }}">
                                        {{ item.name }} (Pos: {{ item.pos }})
                                    </option>
                                {% endfor %}
                            </select>
                        {% endif %}
                    </div>
                </div>
                
                <div class="card-footer">
                    <input type="submit" name="send" value="Save" class="btn btn-sm btn-info" />
                    <input type="submit" name="cancel" value="Cancel" class="btn btn-sm btn-danger" />
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}